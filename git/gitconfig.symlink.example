[user]
	email = EMAILHERE
	name = USERNAMEHERE
[core]
	excludesfile = ${HOME}/.gitignore
[color]
	ui = auto
[push]
	default = simple
[alias]
	lol = log --oneline --graph --decorate
  promote = !$BASH/bin/git-promote
  wtf     = !$BASH/bin/git-wtf
  rank-contributers = !$BASH/bin/git-rank-contributers
  count   = !git shortlog -sn
